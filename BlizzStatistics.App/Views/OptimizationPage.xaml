                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="10" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock Text="Haste"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                </Border>
                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="12" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock Text="Mastery"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center" ></TextBlock>
