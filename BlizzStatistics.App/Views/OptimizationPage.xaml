                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <!--Original Character stats -->
                <Border BorderThickness="1,1,1,1" Grid.Column="2"  Grid.Row="1"  Grid.ColumnSpan="8" BorderBrush="Black" VerticalAlignment="Center">
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock Text="Original Character Statistics"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                </Border>
                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock x:Name="OriginalMainStatBlock"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                </Border>
                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock Text="Healthpoints"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                </Border>
                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock x:Name="OriginalClassResourceBlock"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                </Border>
                <Border BorderThickness="1,0,0,1" Grid.Column="2"  Grid.Row="8" Grid.RowSpan="2" Grid.ColumnSpan="4" BorderBrush="Black" >
                    <Viewbox StretchDirection="DownOnly">
                        <TextBlock Text="Critical strike"  HorizontalAlignment="Center"  Foreground="Black" VerticalAlignment="Center"></TextBlock>
