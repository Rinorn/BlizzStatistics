            <controls:PageHeader.PrimaryCommands>
            <AppBarButton Click="{x:Bind AddNewCharacterToDb}" Icon="AddFriend"  Label="Add new Character"></AppBarButton>
            <AppBarButton Click="{x:Bind UpdateCharacterToDb}"  Icon="MoveToFolder" Label="Save Character"></AppBarButton>
            <AppBarButton Command="{x:Bind ViewModel.DeleteSavedCharacterCommand}" Icon="Delete" CommandParameter="{Binding SelectedItem, ElementName=CharacterListView}" Label="Delete selected character"></AppBarButton>
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>
        <ListView x:Name="CharacterListView" RelativePanel.Below="PageHeader" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True"  
                   Background="BlanchedAlmond"
                  ItemsSource="{Binding Source={StaticResource SavedCharactersViewSource}}"  SelectionChanged="CharacterListView_OnSelectionChanged">
            <ListView.ItemTemplate >
                <DataTemplate x:DataType="classLibrary1:SavedCharacter" >
                    <TextBlock Text="{Binding CharacterInfo, Mode=OneWay}" Foreground="Black" FontSize="20" ></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
